{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "jquery": true,
        "es6": true
    },
    "globals": {
        "mw": true,
        "OO": true,
        "importScript": true,
        "importStylesheet": true,
        "wgULS": true,
        "wpTextbox1": true,
        "wpMinoredit": true,
        "wpSummary": true,
        "wpSave": true,
        "wpDiff": true,
        "Morebits": true
    },
    "rules": {
        "no-unused-labels": "off",
        "no-redeclare": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "spaced-comment": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ]
    }
}